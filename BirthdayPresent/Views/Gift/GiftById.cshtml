@using BirthdayPresent.Core.ViewModels.Gift;
@model GiftByIdViewModel


@{
    ViewData["Title"] = "Gift Details";
}

<h2>Gift Details</h2>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
</div>

<h4>Votes</h4>

@if (Model.Votes != null && Model.Votes.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Voter</th>
                <th>Vote Date</th>
                <th>Vote Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vote in Model.Votes)
            {
                <tr>
                    <td>@vote.VotedAt.ToString("yyyy-MM-dd")</td> <!-- Assuming there's a VoteDate property -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No votes available for this gift.</p>
}

