@using BirthdayPresent.Core.ViewModels.Gift;
@model IEnumerable<AllGiftsViewModel>


@{
    ViewData["Title"] = "All gifts";
}


<h2>All Gifts</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Gift Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var gift in Model)
            {
                <tr>
                    <td>@gift.Name</td>
                    <td>@gift.Description</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No gifts available.</td>
            </tr>
        }
    </tbody>
</table>